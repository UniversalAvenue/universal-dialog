{
  "name": "universal-dialog",
  "description": "Universal dialog",
  "main": "lib/index.js",
  "scripts": {
    "clean": "./node_modules/rimraf/bin.js lib",
    "test": "npm run build && ./node_modules/jest-cli/bin/jest.js",
    "build": "./node_modules/babel-cli/bin/babel.js src --out-dir lib",
    "pkgfiles": "./node_modules/pkgfiles/bin/pkgfiles.js",
    "prepublish": "npm run clean && npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "files": [
    "lib",
    "!lib/__tests__"
  ],
  "release": {
    "verifyConditions": "condition-circle"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UniversalAvenue/universal-dialog.git"
  },
  "keywords": [
    "Dialog"
  ],
  "author": "Daniel Werth√©n <danielwerthen@gmail.com> (https://github.com/danielwerthen)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UniversalAvenue/universal-dialog/issues"
  },
  "homepage": "https://github.com/UniversalAvenue/universal-dialog#readme",
  "peerDependencies": {},
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-eslint": "^5.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "condition-circle": "^1.2.0",
    "cz-conventional-changelog": "^1.1.5",
    "eslint-config-airbnb": "^6.0.2",
    "eslint-plugin-react": "^4.1.0",
    "jest-cli": "^0.8.1",
    "pkgfiles": "^2.3.0",
    "react-addons-test-utils": "^0.14.3",
    "rimraf": "^2.4.4",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "node_modules"
    ],
    "testPathDirs": [
      "lib"
    ]
  }
}
